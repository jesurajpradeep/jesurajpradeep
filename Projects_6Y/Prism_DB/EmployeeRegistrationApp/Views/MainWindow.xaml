<Window x:Class="EmployeeRegistrationApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{Binding Title}" Height="600" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="200"/>
            <RowDefinition Height="150*"/>
        </Grid.RowDefinitions>
        <ContentControl prism:RegionManager.RegionName="EmpRegistrationView"  Grid.Row="0"/>
        <ContentControl prism:RegionManager.RegionName="EmpDataView"  Grid.Row="1"/>
    </Grid>
</Window>
